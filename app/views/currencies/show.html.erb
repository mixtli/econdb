<%= render :partial => 'sidebar' %>

<h1>Currencies: <%=h @currency.name %></h1>

<p>
  <b>Code:</b>
  <%=h @currency.code %>
</p>
<p>
  <b>Current Value:</b>
  <%=h @currency.current_value %>
</p>

<%#= resource.data_source.name %>
<%= image_tag data_source_path(@currency.data_source, :format => :png), :width => 400, :height => 250 %>

<%= link_to 'Edit', edit_currency_path(@currency) %> |
<%= link_to 'Back', currencies_path %>